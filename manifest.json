{
    "name": "Quick Translation",
    "version": "0.0.1",
    "description": "Translate text real quick",
    "manifest_version": 2,
    "browser_action": {
    "default_title": "Quick Translation",
    "default_popup": "popup.html" 
    },
    "permissions": [
        "activeTab",
    "tabs",
    "<all_urls>"
    ],
    "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["background.js"],
        "run_at": "document_start",
        "all_frames": true
    }
    ]
}